<h1>Edit User</h1>

<%= form_for @user do |f| %>
<ul>
  <% @user.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
  <%= f.label :username %>:
  <%= f.text_field :username %><br>
  <%= f.label :email %>:
  <%= f.text_field :email %><br>
  <%= f.label :password %>:
  <%= f.password_field :password %><br>
  <%= f.submit "Submit" %>
<% end %>
